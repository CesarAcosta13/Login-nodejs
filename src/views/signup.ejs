<%- layout('layouts/main.ejs')%>



<div class="row mt-4">
    <div class="col-md-4 offset-md-4">
        <div class="card text-black bg-light  mb-3 text-center" style="max-width: 20rem;">
            <div class="card-header">
                <h3>
                    SignUp
                </h3>
            </div>
            <div class="card-body">
                <form action="/signup" method="POST">
                    <div class="form-group">
                        <input type="email" name="email" placeholder="insert Email" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" placeholder="insert Password" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-4">SignUp</button>
                </form>
            </div>
        </div>
    </div>

</div>